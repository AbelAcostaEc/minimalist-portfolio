---
import Section from "../Section.astro";
import { projects } from "@cv";
---

<Section title="Projects">
  <ul class="projects">
    {
      projects.map(({ description, github, highlights, url, name }) => (
        <li>
          <article>
            <header>
              <a href={url} title={`Ver el proyecto ${name}`}>
                <h3>{name}</h3>
              </a>
              <p>{description}</p>
            </header>
            <footer><ul>

                {
                    highlights.map((highlight) => {
                        return (
                            <li>
                            {highlight}
                            </li>
                        )
                    })
                }
                </ul>
            </footer>
          </article>
        </li>
      ))
    }
  </ul></Section
>
